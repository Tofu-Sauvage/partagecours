{% extends './base.html.twig'%}{% block title %} | accueil{% endblock %} {%
block body %}
<div class="container mt-5">
    <h1>Ajouter un article</h1>
  {{ form_start(articleForm, {attr:  {'class' : 'col-md-8 mx-auto'}}) }}
  <form>
    <div class="form-group container mt-5">
      <fieldset>
        <div class="form-group">
          {{ form_label(articleForm.title) }}
          {{form_widget(articleForm.title, {'label':'Titre', attr: {'placeholder': 'Entrez le titre', 'class' :"form-control"
          }})}}
        </div>
        <div class="form-group">
          {{ form_label(articleForm.content) }}
          {{form_widget(articleForm.content, {'label':'Contenu', attr: {'rows':10,'placeholder': 'Tapez votre article','class' :"form-control"
          }})}}
        </div>
        <div class="form-group">
          {{ form_label(articleForm.image) }}
          {{form_widget(articleForm.image, {'label':'Image', attr: {'class' :"form-control"
          }})}}
        </div>
        <div class="form-group">
          {{form_widget(articleForm.add,{ 'label': 
              'edit' in  app.request.uri ? 'Modifier':'Ajouter' 
           }
                )}}
        </div>
      </fieldset>
    </div>
  </form>
  {{ form_end(articleForm) }}
</div>

{% endblock body %}
