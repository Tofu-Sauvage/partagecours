{% extends './base.html.twig'%}{% block title %} | accueil{% endblock %} {%
block body %}
<div class="container mt-5">
  <h1>Articles</h1>
  <div class="row mt-5">
    {% for article in articles %}

    <div class="col-md-6 col-sm-12">
      <div class="card mb-5 shadow-sm p-3 bg-body rounded" style="width: 80%">
        <img
          src="{{ asset('uploads/images/' ~ article.image) }}"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h2>{{ article.title }}</h2>
          <p class="card-text">
            {{ article.content | striptags | slice(0, 100)}}...
          </p>
          <p class="card-text">
            <a
              href="{{ path('article', { id: article.id }) }}"
              class="card-link"
              >Lire la suite</a
            >
          </p>
          <small class="text-muted">
            {{ article.createdAt | date("d/m/Y")}} Ã 
            {{ article.createdAt | date("H:i:s")}}
          </small>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock body %}
