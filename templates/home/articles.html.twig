{% extends './base.html.twig'%}{% block title %} | accueil{% endblock %} {%
block body %}
<div class="container mt-5">
  <h1>Articles</h1>
  <div class="row mt-5">
    {% for article in articles %}

    <div class="col-md-6 col-sm-12">
      <div class="card mb-5" style="width: 80%">
        <img
          src="{{ asset('uploads/dog1.jpg') }}"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h2>{{ article.title }}</h2>
          <p class="card-text">
            {{ article.content | raw }}
          </p>
          <a href="{{ path('article') }}" class="card-link">Lire la suite</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock body %}
